{
  "name": "todo_server",
  "version": "1.0.0",
  "description": "REST API for simple todo app",
  "main": "app.js",
  "repository": "https://github.com/simecek-m/todo_server.git",
  "author": "Martin Simecek <simecek.m@seznam.cz>",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.3.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "mongoose": "^5.5.9",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.9.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-json-schema": "^1.5.1",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "husky": "^3.0.0",
    "link-module-alias": "^1.2.0",
    "mocha": "^6.1.4",
    "mongo-seeding": "^3.2.0-alpha.0",
    "nyc": "^14.1.1"
  },
  "scripts": {
    "postinstall": "link-module-alias",
    "start": "env MODE='dev' nodemon --exec \"yarn lint && node app\"",
    "lint": "eslint . --ext .js,.json",
    "test": "yarn lint && env MODE='test' nyc --silent mocha --exit",
    "test-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "_moduleAliases": {
    "~root": ".",
    "~middleware": "middleware",
    "~model": "model",
    "~router": "router",
    "~config": "config",
    "~schema": "test/schema",
    "~server": "server",
    "~database": "database",
    "~logger": "logger"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test"
    }
  }
}
