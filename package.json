{
  "name": "todo_server",
  "version": "1.0.0",
  "description": "REST API for simple todo app",
  "repository": "https://github.com/simecek-m/todo_server.git",
  "author": "Martin Simecek <simecek.m@seznam.cz>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-oauth2-jwt-bearer": "^1.1.0",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.15",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-json-schema": "^1.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^12.4.2",
    "mocha": "^10.0.0",
    "mongo-seeding": "^3.7.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "sinon": "^14.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "postinstall": "link-module-alias",
    "build": "tsc",
    "start": "cross-env MODE=dev NODE_PATH=src ts-node-dev --respawn src/start.ts",
    "start:prod": "cross-env MODE=prod NODE_PATH=dist node dist/start",
    "lint": "eslint . --ext .js,",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier **/*.js",
    "test": "cross-env MODE=test nyc --silent mocha",
    "coverage": "nyc report --reporter=lcov",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "_moduleAliases": {
    "~root": ".",
    "~app": "src/app",
    "~auth": "src/auth",
    "~env": "src/env",
    "~constants": "src/constants",
    "~defaults": "src/config/defaults.js",
    "~database": "src/database",
    "~logger": "src/logger",
    "~middleware": "src/middleware",
    "~model": "src/database/model",
    "~router": "src/router",
    "~schema": "test/data/schema",
    "~server": "src/server",
    "~test": "test",
    "~test-helper": "test/helper",
    "~mocks": "test/helper/mock"
  }
}
