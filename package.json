{
  "name": "todo_server",
  "version": "1.0.0",
  "description": "REST API for simple todo app",
  "repository": "https://github.com/simecek-m/todo_server.git",
  "author": "Martin Simecek <simecek.m@seznam.cz>",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/swagger-ui-express": "^4.1.3",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-oauth2-jwt-bearer": "^1.1.0",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.5.0",
    "treblle": "^1.2.1",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1",
    "xss": "^1.0.14",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "chai-json-schema": "^1.5.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.2",
    "mocha": "^10.0.0",
    "mongo-seeding": "^3.7.2",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "build": "eslint ./src --ext .ts & tsc",
    "start": "cross-env MODE=production NODE_PATH=dist node dist/start",
    "start:dev": "cross-env MODE=development NODE_PATH=src nodemon ./src/start.ts",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier **/*.ts",
    "test": "cross-env MODE=test nyc --silent mocha ./test/**/**.ts",
    "coverage": "nyc report --reporter=lcov",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint",
      "tsc-files --p tsconfig.json --noEmit"
    ]
  }
}
