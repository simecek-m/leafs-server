{
  "name": "todo_server",
  "version": "1.0.0",
  "description": "REST API for simple todo app",
  "main": "app.js",
  "repository": "https://github.com/simecek-m/todo_server.git",
  "author": "Martin Simecek <simecek.m@seznam.cz>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "sinon": "^7.5.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.9.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-json-schema": "^1.5.1",
    "codecov": "^3.7.1",
    "cross-env": "^5.2.1",
    "eslint": "^5.16.0",
    "husky": "^3.0.0",
    "link-module-alias": "^1.2.0",
    "mocha": "^6.1.4",
    "mongo-seeding": "^3.2.0-alpha.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0"
  },
  "scripts": {
    "postinstall": "link-module-alias",
    "start": "cross-env MODE=dev nodemon --exec \"npm run lint && node start\"",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "test": "npm run lint && cross-env MODE=test nyc --silent mocha",
    "test-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "_moduleAliases": {
    "~root": ".",
    "~app": "src/app",
    "~auth": "src/auth",
    "~config": "src/config",
    "~constants": "src/config/constants.js",
    "~defaults": "src/config/defaults.js",
    "~database": "src/database",
    "~logger": "src/logger",
    "~middleware": "src/middleware",
    "~model": "src/model",
    "~router": "src/router",
    "~schema": "test/data/schema",
    "~server": "src/server",
    "~test": "test",
    "~test-helper": "test/helper",
    "~mocks": "test/helper/mock"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  }
}
