  "paths": {
    "/stats": {
      "get": {
        "tags": [
          "stats"
        ],
        "description": "Retrieve statistics of currently logged in user",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stats"
                },
                "examples": {
                  "stats": {
                    "$ref": "#/components/examples/stats"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        },
        "operationId": "getUserStatistics"
      }
    }
  },
  "components": {
    "schemas": {
      "Color": {
        "type": "object",
        "properties": {
          "light": {
            "type": "string",
            "description": "HEX color code"
          },
          "dark": {
            "type": "string",
            "description": "HEX color code"
          }
        },
        "required": [
          "light",
          "dark"
        ]
      },
      "Tag": {
        "type": "object",
        "required": [
          "id",
          "owner",
          "label",
          "color"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          }
        }
      },
      "Task": {
        "type": "object",
        "required": [
          "id",
          "text",
          "isCompleted",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "TodoList": {
        "type": "object",
        "required": [
          "id",
          "author",
          "title",
          "icon",
          "tags",
          "tasks",
          "color",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          },
          "tasks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Task"
            }
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      },
      "Stats": {
        "type": "object",
        "required": [
          "listsCount",
          "unfinishedTasksCount"
        ],
        "properties": {
          "lastActiveList": {
            "$ref": "#/components/schemas/TodoList"
          },
          "listsCount": {
            "type": "number"
          },
          "unfinishedTasksCount": {
            "type": "number"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "number"
          },
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "title": "",
        "description": "Generic HTTP Error"
      }
    },
    "responses": {
      "401": {
        "description": "Access token is missing out or invalid",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "examples": {
              "notAuthorized": {
                "$ref": "#/components/examples/NotAuthorized"
              }
            }
          }
        }
      },
      "403": {
        "description": "You don't have permission for this action",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 403,
              "message": "Forbidden",
              "description": "You don't have permission for this action"
            }
          }
        }
      },
      "404": {
        "description": "Resource could not be found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 404,
              "message": "Not Found",
              "description": "Resource could not be found"
            }
          }
        }
      },
      "409": {
        "description": "Resource already exists",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 409,
              "message": "Conflict",
              "description": "Resource already exists"
            }
          }
        }
      },
      "500": {
        "description": "Unexpected server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 500,
              "message": "Internal Server Error",
              "description": "Unexpected server error"
            }
          }
        }
      }
    },
    "securitySchemes": {
