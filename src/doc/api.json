{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0.0",
    "title": "Leafs",
    "description": "Leafs REST API",
    "contact": {
      "name": "Martin Šimeček",
      "url": "https://github.com/simecek-m/leafs-server",
      "email": "simecek.m@seznam.cz"
    }
  },
  "servers": [
    {
      "url": "https://leafs-server-b5ywfc4tjq-ew.a.run.app/api",
      "description": "Leafs"
    }
  ],
  "paths": {
    "/stats": {
      "get": {
        "tags": [
          "stats"
        ],
        "description": "Retrieve statistics of currently logged in user",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stats"
                },
                "examples": {
                  "stats": {
                    "$ref": "#/components/examples/stats"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        },
        "operationId": "getUserStatistics"
      }
    },
    "/pages": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [
          "pages"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Page"
                  }
                }
              }
            }
          }
        },
        "operationId": "get-pages",
        "description": "get all available pages"
      },
      "post": {
        "summary": "Create new page",
        "description": "New Page",
        "operationId": "new-page",
        "tags": [
          "pages"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Page"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Page"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Color": {
        "type": "object",
        "properties": {
          "light": {
            "type": "string",
            "description": "HEX color code"
          },
          "dark": {
            "type": "string",
            "description": "HEX color code"
          }
        },
        "required": [
          "light",
          "dark"
        ]
      },
      "Tag": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "owner": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          }
        },
        "required": [
          "id",
          "owner",
          "label",
          "color"
        ]
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "text": {
            "type": "string"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "priority": {
            "type": "integer",
            "minimum": 0,
            "maximum": 5
          },
          "deadline": {
            "type": "string",
            "format": "date-time"
          },
          "reminder": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "text",
          "isCompleted",
          "priority",
          "deadline",
          "reminder",
          "createdAt",
          "updatedAt"
        ]
      },
      "Page": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          },
          "type": {
            "type": "string",
            "enum": [
              "list",
              "markdown"
            ]
          },
          "pages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Page"
            }
          },
          "content": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/ListPage"
              },
              {
                "$ref": "#/components/schemas/MarkdownPage"
              }
            ]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "icon",
          "tags",
          "color",
          "pages",
          "createdAt",
          "updatedAt"
        ]
      },
      "ListPage": {
        "type": "object",
        "properties": {
          "tasks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Task"
            }
          }
        },
        "required": [
          "tasks"
        ]
      },
      "MarkdownPage": {
        "type": "string"
      },
      "Stats": {
        "type": "object",
        "required": [
          "listsCount",
          "unfinishedTasksCount"
        ],
        "properties": {
          "listsCount": {
            "type": "integer"
          },
          "unfinishedTasksCount": {
            "type": "integer"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "description": "Generic HTTP Error"
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "profilePicture": {
            "type": "string",
            "format": "uri"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "username",
          "profilePicture",
          "email"
        ]
      },
      "Member": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "privilege": {
            "type": "string",
            "enum": [
              "viewer",
              "editor",
              "admin",
              "owner"
            ]
          }
        },
        "required": [
          "user",
          "privilege"
        ]
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          },
          "members": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Member"
            }
          }
        },
        "required": [
          "id",
          "name",
          "icon",
          "color",
          "members"
        ]
      },
      "Share": {
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Team"
            }
          }
        },
        "required": [
          "users",
          "teams"
        ]
      },
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          },
          "color": {
            "$ref": "#/components/schemas/Color"
          },
          "pages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Page"
            }
          },
          "defaultPageId": {
            "type": "string"
          },
          "share": {
            "$ref": "#/components/schemas/Share"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true
          }
        },
        "required": [
          "id",
          "name",
          "description",
          "icon",
          "tags",
          "color",
          "pages",
          "defaultPageId",
          "share"
        ]
      }
    },
    "responses": {
      "401": {
        "description": "Access token is missing out or invalid",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "examples": {
              "notAuthorized": {
                "$ref": "#/components/examples/NotAuthorized"
              }
            }
          }
        }
      },
      "403": {
        "description": "You don't have permission for this action",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 403,
              "message": "Forbidden",
              "description": "You don't have permission for this action"
            }
          }
        }
      },
      "404": {
        "description": "Resource could not be found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 404,
              "message": "Not Found",
              "description": "Resource could not be found"
            }
          }
        }
      },
      "409": {
        "description": "Resource already exists",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 409,
              "message": "Conflict",
              "description": "Resource already exists"
            }
          }
        }
      },
      "500": {
        "description": "Unexpected server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "code": 500,
              "message": "Internal Server Error",
              "description": "Unexpected server error"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "token": {
        "type": "apiKey",
        "name": "Authorization",
        "description": "Access token in JWT format",
        "in": "header"
      }
    },
    "examples": {
      "stats": {
        "value": {
          "listsCount": 4,
          "unfinishedTasksCount": 13
        }
      },
      "NotAuthorized": {
        "value": {
          "code": 401,
          "message": "Unauthorized",
          "description": "Access token is missing out or invalid"
        }
      }
    }
  },
  "security": [
    {
      "token": []
    }
  ],
  "tags": [
    {
      "name": "stats"
    },
    {
      "name": "pages"
    }
  ]
}